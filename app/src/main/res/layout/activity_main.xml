<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:id="@+id/edtTexto"
            android:hint="Informe o texto para criptografar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/btnCriptografar"
            android:layout_below="@+id/edtTexto"
            android:text="Criptografar"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/txt"
            android:layout_below="@id/btnCriptografar"
            android:text="Criptografado:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/resultado"
            android:layout_below="@id/txt"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
    <TextView
            android:id="@+id/txtDesc"
            android:layout_below="@id/resultado"
            android:text="Descriptografado:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/resultadoDes"
            android:layout_below="@id/txtDesc"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
    <Button
            android:id="@+id/btnDescriptografar"
            android:layout_below="@+id/resultadoDes"
            android:text="Descriptografar"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</RelativeLayout>